    Private Function ExecuteScalar(query As String)

        Try
            sqlcon.ConnectionString = strconnection()
            sqlcon.Open()

            sqlcmd.CommandText = query
            sqlcmd.Connection = sqlcon


        Catch ex As Exception

            MessageBox.Show(ex.Message)
        Finally
            sqlcon.Close()

        End Try

        Return 0


    End Function

